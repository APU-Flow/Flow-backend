{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": 0,
        "eol-last": 2,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "no-unused-vars": [
            "error",
            { "args": "none" }
        ],
        "arrow-spacing": [
            "error",
            { "before": true, "after": true }
        ],
        "keyword-spacing": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [
            "error",
            "never"
        ]
    }
}
